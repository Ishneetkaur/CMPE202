<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="option" controller="mygame.Menu">
        <layer id="background" backgroundColor="#000f" childLayout="horizontal">
            <image filename="Interface/optionPage.png" width="100%" height="100%"></image>
            
        </layer>
        
        <layer id="foreground" childLayout="vertical">
            
            <panel id="panel_top1" height="20%" width="75%" align="center" childLayout="center" >
               
            </panel>
            
             
           
            
             
            <panel id="panel_top3" height="10%" width="50%" margin="25" align="center" childLayout="vertical" >
                <image filename="Interface/set1.png" align="left" width="25%" height="50%" >
                      
                    <interact onClick="set1Clicked()"></interact>
                      
                </image>  
                 <panel id="panel_tick1" height="30%" width="20%" margin="25" align="left" childLayout="center" >
            
               
                 </panel>  
            </panel>          
             <panel id="panel_top4" height="20%" width="75%" align="center" childLayout="center" >
               
            </panel>
            <panel id="panel_top5" height="10%" width="75%" align="center" childLayout="center" >
               
            </panel>
          
            
            <panel id="panel_mid" height="10%" width="50%"  margin="25"  align="center" childLayout="vertical" >
                  
                    
                <image filename="Interface/set2.png" align="left" width="25%" height="50%">
                      
                    <interact onClick="set2Click()"></interact>
                      
                </image> 
             
                 <panel id="panel_tick2" height="30%" width="20%" margin="25" align="left" childLayout="center" >
            
                
                 </panel>
            </panel>
            
           <panel id="panel_top6" height="10%" width="75%" align="center" childLayout="center" >
               
            </panel>
            
            <panel id="panel_bottom" height="20%" width="75%" margin="25" align="right" childLayout="horizontal" >
             
                <panel id="panel_bottom_left" height="50%" width="50%" align="center" childLayout="vertical" >
                              
                       
                <image filename="Interface/backButton.png" align="center" width="25%" height="50%">
                      
                    <interact onClick="backToMenu()"></interact>
                      
                </image> 
                 

                </panel>    
            
 
         
            </panel>
        </layer>     
    </screen>
</nifty>
